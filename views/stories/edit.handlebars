<h1>Edit Story</h1>
<div class="row">
    <form action="{{rootpath}}/stories/edit/{{story.id}}?_method=PUT" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s4">
                <select name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label>Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <label for="comment">
                    <input type="checkbox" name="comment" id="comment" class="filled-in" checked/>
                    <span>Allow Comments</span>
                </label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea name="body">
                    {{story.body}}
                </textarea>
            </div>
        </div>

        <input type="submit" value="Update" class="btn">
    </form>
</div>